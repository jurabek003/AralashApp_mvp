        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#90a4ae"
        app:mbn_rippleColor="#D50000"
        app:mbn_selectedIconColor="#3c415e"
        app:mbn_shadowColor="#FFD600"
        app:layout_constraintBottom_toBottomOf="parent"
       />

