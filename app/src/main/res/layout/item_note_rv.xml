<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tht_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:text="Assalom alekum mening ismimni bilasz men o'sha androidchi Jurabek man :)"
                android:textStyle="bold"
                android:fontFamily="@font/jacques_francois"
                />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tht_day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingVertical="5dp"
                   android:layout_marginEnd="5dp"
                   android:textSize="11sp"
                   android:text="12.12.1221"
                   android:textColor="#AA00FF"
                   android:textStyle="bold|italic"/>

               <TextView
                   android:id="@+id/tht_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#AA00FF"
                   android:textSize="11sp"
                   android:layout_marginEnd="5dp"
                   android:paddingVertical="5dp"
                   android:textStyle="bold|italic"
                   android:text="Today"
                   />

               <TextView
                   android:id="@+id/tht_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingVertical="5dp"
                   android:layout_marginEnd="15dp"
                   android:textColor="#AA00FF"
                   android:textSize="11sp"
                   android:textStyle="italic|bold"
                   android:text="18:56"
                   />
           </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>