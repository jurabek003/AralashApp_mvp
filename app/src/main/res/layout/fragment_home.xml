<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintHeight_percent=".3"
       app:strokeWidth="0dp"
       android:backgroundTint="@color/white"
       app:cardElevation="25dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_margin="20dp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/tht_kurs_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:layout_marginStart="16dp"
               android:background="@drawable/shape1"
               android:text="kurs1"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/shape2"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@+id/tht_kurs_1"
               app:layout_constraintStart_toStartOf="@+id/tht_kurs_1"
               android:hint="12345"
               android:textSize="25sp"
               android:textColor="@color/black"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/tht_kurs_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="kurs1"
               android:background="@drawable/shape1"
               android:textSize="20sp"
               android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="20dp"
               android:layout_marginEnd="20dp"/>

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/shape2"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@+id/tht_kurs_2"
             app:layout_constraintEnd_toEndOf="@+id/tht_kurs_2"
               android:hint="12345"
               android:textSize="25sp"
               android:textColor="@color/black"
               android:textStyle="bold"/>

           <ImageView
               android:id="@+id/img_exchange"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:src="@drawable/ic_exchange"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="10dp"
               app:layout_constraintEnd_toStartOf="@+id/tht_kurs_2"
               app:layout_constraintStart_toEndOf="@+id/tht_kurs_1" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Exchange"
               app:layout_constraintTop_toBottomOf="@+id/img_exchange"
               app:layout_constraintStart_toStartOf="@+id/img_exchange"
               app:layout_constraintEnd_toEndOf="@+id/img_exchange"
               android:textStyle="bold"
               android:textColor="@color/black"
               android:fontFamily="@font/jacques_francois"
               android:textSize="18sp"/>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.card.MaterialCardView>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent=".5"
    app:strokeWidth="0dp"
    app:cardElevation="20dp"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="50dp"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_valyuta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lotti_animation2" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_home"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>